{
  "name": "gorae-github-pipe",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint 'lib/**/*.js'",
    "start": "node .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "docker:images": "docker images | grep gorae",
    "docker:run": "docker run -dit -env PORT=7777 -p 7778:7777 -v /var/run/docker.sock:/var/run/docker.sock  --name gorae-github-pipe gorae-github-pipe:latest",
    "docker:build": "docker build --tag gorae-github-pipe . && npm run docker:images"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhiokim/gorae-github-pipe.git"
  },
  "keywords": [],
  "author": "Rhio Kim",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rhiokim/gorae-github-pipe/issues"
  },
  "homepage": "https://github.com/rhiokim/gorae-github-pipe#readme",
  "dependencies": {
    "download-github-repo": "^0.1.3",
    "github-webhook-handler": "^0.6.0"
  },
  "devDependencies": {
    "commitizen": "^2.8.6",
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.10.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "ghooks": "^1.3.2",
    "nsp": "^2.6.2",
    "validate-commit-msg": "^2.8.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    },
    "validate-commit-msg": {
      "preset": "angular",
      "warnOnFail": false,
      "maxSubjectLength": 100
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
